@{
    ViewData["Title"] = "Movie Form";
}
@model Movie

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 400px;">
        <br />
        <h4 class="card-title text-center">Movie Form:</h4>
        
        <div class="card-body">
            <form method="post">

                <div class="form-group, form-control">

                    <input type="hidden" asp-for="MovieId"/>

                    <label>Category</label>
                    <br />
                    <select asp-for="CategoryId">
                        <option value="">Select Category</option>
                        @foreach (var c in ViewBag.Categories)
                        {
                            <option value="@c.CategoryId">@c.CategoryName</option>
                        }
                    </select>
                    <br />
                    <br />
                    <label asp-for="Title">Title *</label>
                    <br />
                    <input asp-for="Title"/>
                    <br />
                    <br />
                    <label asp-for="Year">Year *</label>
                    <br />
                    <input asp-for="Year"/>
                    <br />
                    <br />
                    <label asp-for="Director">Director</label>
                    <br />
                    <input asp-for="Director"/>
                    <br />
                    <br />
                    <label asp-for="Rating">Rating</label>
                    <br />
                    <select asp-for="Rating">
                        <option value="">Select Rating</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                    <br />
                    <br />
                    <label asp-for="Edited">Edited *</label>
                    <br />
                    <select asp-for="Edited">
                        <option value="" selected disabled></option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <br />
                    <br />
                    <label asp-for="LentTo">Lent To</label>
                    <br />
                    <input asp-for="LentTo"/>
                    <br />
                    <br />
                    <label asp-for="CopiedToPlex">Copied To Plex *</label>
                    <br />
                    <select asp-for="CopiedToPlex">
                        <option value="" selected disabled></option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <br />
                    <br />
                    <label asp-for="Notes">Notes</label>
                    <br />
                    <textarea asp-for="Notes" StringLength="25"></textarea>
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-sm">Submit</button>

                <div asp-validation-summary="All"></div>

            </form>
        </div>
    </div>
</div>