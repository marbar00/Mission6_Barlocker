@{
    ViewData["Title"] = "Movie Form";
}
@model MovieInput

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 400px;">
        <br />
        <h4 class="card-title text-center">Movie Form:</h4>
        
        <div class="card-body">
            <form method="post">

                <div class="form-group, form-control">

                    <label asp-for="Category">Category *</label>
                    <br />
                    <input asp-for="Category"/>
                    <br />
                    <br />
                    <label asp-for="SubCategory">Sub Category *</label>
                    <br />
                    <input asp-for="SubCategory"/>
                    <br />
                    <br />
                    <label asp-for="Title">Title *</label>
                    <br />
                    <input asp-for="Title"/>
                    <br />
                    <br />
                    <label asp-for="Year">Year *</label>
                    <br />
                    <input asp-for="Year"/>
                    <br />
                    <br />
                    <label asp-for="Director">Director *</label>
                    <br />
                    <input asp-for="Director"/>
                    <br />
                    <br />
                    <label asp-for="Rating">Rating *</label>
                    <br />
                    <select asp-for="Rating">
                        <option value="" selected disabled></option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                    <br />
                    <br />
                    <label asp-for="Edited">Edited</label>
                    <br />
                    <select asp-for="Edited">
                        <option value="" selected disabled></option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <br />
                    <br />
                    <label asp-for="LentTo">Lent To</label>
                    <br />
                    <input asp-for="LentTo"/>
                    <br />
                    <br />
                    <label asp-for="Notes">Notes</label>
                    <br />
                    <textarea asp-for="Notes" maxlength="25"></textarea>
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>